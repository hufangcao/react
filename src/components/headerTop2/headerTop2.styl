.head-wrap
  z-index 2
  background white
  .top
    width 100%
    height 35px
    background #333
    padding 7px
    position relative
    .close
      width 20px
      height 20px
      background aliceblue
      display inline-block
      margin-top 10px

    .wrap
      display inline-block
      margin-left 10px
      .logo
        float left
        display inline-block
        width 35px
        height 35px
        background #B9383D
        margin-right 10px
      .text
        float right
        p
          font-size 12px
          color #fff
          line-height 20px
    a
      display inline-block
      width 70px
      height 25px
      position absolute
      right 20px
      top 10px
      border-radius 3px
      font-size 12px
      text-align center
      line-height 25px
      background  #B9383D
      color #eee
      clearFix()

  .bottom
    width 96%
    margin-left  2%
    height 4rem
    a
      display inline-block
      width 6rem
      height 4rem
      font 1.1rem "微软雅黑"
      color black
      line-height 4rem
      text-align center

    .input
      width 16rem
      height 1.7rem
      position absolute
      right 1.5rem
      top 1.3rem
      border-radius .2rem
      background #eee
      padding 0 .5rem
      box-sizing border-box
      text-align center
      line-height 1.7rem
      .guide_item
        display inline-block
        font-size 1rem
      span
        display inline-block
        font-size .7px
        color #7e8c8d
        font-family "Microsoft YaHei"

